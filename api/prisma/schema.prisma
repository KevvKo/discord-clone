  datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model user {
  id                Int           @default(autoincrement()) @id
  username          String?       @unique
  email             String?       @unique
  password          String? 
}

model channel {
  id                Int           @default(autoincrement()) @id
  name              String? 
  createdAt         DateTime?     @db.Timestamp()
  createdBy         Int?          @unique
}

model privateChat {
  id                Int           @default(autoincrement()) @id
  createdAt         DateTime      @db.Timestamp()
}

model publicChat {
  id                Int           @default(autoincrement()) @id
  channelId         Int           @unique
  createdAt         DateTime      @db.Timestamp()
}

model participiants {
  userId            Int           @unique
  chatId            Int           @unique
}

model messages {
  id                Int           @default(autoincrement()) @id
  chatId            Int?          @unique
  text              String
  writtenBy         Int?
  writtenIn         Int?
}